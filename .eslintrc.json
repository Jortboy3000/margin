{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-undef": "warn"
    },
    "globals": {
        "UIManager": "readonly",
        "PageUtils": "readonly",
        "StorageUtils": "readonly",
        "NetworkUtils": "readonly",
        "SearchUtils": "readonly",
        "TelemetryUtils": "readonly"
    }
}