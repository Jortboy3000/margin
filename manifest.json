{
    "manifest_version": 3,
    "name": "Margin",
    "version": "1.0",
    "description": "MARGIN: Monitoring Articles for Revision and Governance of Information Networks. Evidence-aware web memory.",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>",
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Margin Library",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "utils/storage.js",
                "utils/page_utils.js",
                "utils/network_utils.js",
                "utils/search_utils.js",
                "utils/telemetry_utils.js",
                "ui/ui_manager.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}